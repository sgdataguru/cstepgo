# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:4000
NODE_ENV=development

# 2GIS Maps API (Kazakhstan & Central Asia optimized)
NEXT_PUBLIC_2GIS_API_KEY=dbd7eb45-5a3c-49de-a539-af4213db3a92
# Note: For production, rotate API key regularly via 2GIS dashboard at https://dev.2gis.com/

# Stripe Payment Gateway
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key
STRIPE_SECRET_KEY=sk_test_your_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Kaspi Pay (Kazakhstan Local Payment)
KASPI_MERCHANT_ID=your_merchant_id
KASPI_API_KEY=your_kaspi_api_key
KASPI_API_SECRET=your_kaspi_secret
NEXT_PUBLIC_KASPI_ENABLED=true

# Twilio (SMS & OTP)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890
TWILIO_VERIFY_SERVICE_SID=your_verify_service_sid

# Postmark (Email)
POSTMARK_API_KEY=your_postmark_api_key
POSTMARK_FROM_EMAIL=noreply@steppergo.com
POSTMARK_REPLY_TO=support@steppergo.com

# AWS S3 (File Storage)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=steppergo-documents
AWS_REGION=us-east-1
NEXT_PUBLIC_S3_CDN_URL=https://cdn.steppergo.com

# Database (PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost:5432/steppergo
DATABASE_POOL_SIZE=20

# Redis (Caching & Sessions)
REDIS_URL=redis://localhost:6379
REDIS_SESSION_TTL=86400

# Authentication
JWT_SECRET=your_super_secret_jwt_key_here
JWT_REFRESH_SECRET=your_refresh_secret_key_here
JWT_ENCRYPTION_KEY=your_encryption_key_for_sensitive_data
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_EXPIRES_IN=30d
SESSION_SECRET=your_session_secret_here

# WhatsApp Business API
WHATSAPP_API_KEY=your_whatsapp_api_key
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id
WHATSAPP_BUSINESS_ACCOUNT_ID=your_business_account_id
NEXT_PUBLIC_WHATSAPP_ENABLED=true

# Background Check Service (Checkr)
CHECKR_API_KEY=your_checkr_api_key
CHECKR_WEBHOOK_SECRET=your_checkr_webhook_secret

# Google Vision API (OCR for document verification)
GOOGLE_VISION_API_KEY=your_google_vision_api_key
GOOGLE_APPLICATION_CREDENTIALS=./service-account-key.json

# Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX
NEXT_PUBLIC_MIXPANEL_TOKEN=your_mixpanel_token

# Error Tracking
SENTRY_DSN=your_sentry_dsn
NEXT_PUBLIC_SENTRY_DSN=your_public_sentry_dsn

# Feature Flags
NEXT_PUBLIC_ENABLE_DYNAMIC_PRICING=true
NEXT_PUBLIC_ENABLE_DRIVER_APPLICATION=true
NEXT_PUBLIC_ENABLE_KASPI_PAYMENT=true
NEXT_PUBLIC_ENABLE_WHATSAPP_GROUPS=true

# Admin Configuration
ADMIN_EMAIL=admin@steppergo.com
SUPPORT_EMAIL=support@steppergo.com
ADMIN_API_TOKEN=your_secure_admin_token_here

# Country Restrictions (comma-separated ISO codes)
ENABLED_COUNTRIES=KZ,KG
DEFAULT_COUNTRY=KZ

# Pricing Configuration
PLATFORM_FEE_PERCENTAGE=15
MINIMUM_TRIP_PRICE=1000
CURRENCY_CODE=KZT

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Webhook URLs (for local testing use ngrok)
WEBHOOK_BASE_URL=https://your-domain.com
STRIPE_WEBHOOK_URL=${WEBHOOK_BASE_URL}/api/webhooks/stripe
KASPI_WEBHOOK_URL=${WEBHOOK_BASE_URL}/api/webhooks/kaspi
CHECKR_WEBHOOK_URL=${WEBHOOK_BASE_URL}/api/webhooks/checkr
